@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-5xl font-extrabold mb-4 text-gray-800">Welcome to the CMCS System</h1>
    <p class="text-lg text-gray-600 mb-8">Your dashboard for managing teaching claims and approvals.</p>

    <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-4 mt-12">
        <a asp-controller="Home" asp-action="SubmitClaim" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg transform transition-transform duration-200 hover:scale-105">
            Submit a New Claim
        </a>

        <a asp-controller="Home" asp-action="ApproveClaims" class="inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-8 rounded-lg shadow-lg transform transition-transform duration-200 hover:scale-105">
            View Claims to Approve
        </a>
    </div>
</div>
